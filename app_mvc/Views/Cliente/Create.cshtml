@model eCommerce.Models.Table.Cliente

@{
    ViewData["Title"] = "Criando Cliente";
}

<h1>Criando Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPessoa" class="control-label"></label>
                <select asp-for="IdPessoa" class ="form-control" asp-items="ViewBag.IdPessoa"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPreferencial" /> @Html.DisplayNameFor(model => model.IsPreferencial)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
